generator client {
  provider = "prisma-client-js"
  output   = "./prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collections {
  collectionid Int       @id @default(autoincrement())
  name         String
  description  String?
  products     Product[]
  variants     Variant[]
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  image       String?

  price        Float
  collectionid Int
  collection   Collections @relation(fields: [collectionid], references: [collectionid])

  variants Variant[]
}

model Variant {
  id                Int     @id @default(autoincrement())
  parent_product_id Int
  variant_name      String
  price             Float
  image             String?
  collectionid      Int

  parent_product Product     @relation(fields: [parent_product_id], references: [id])
  collection     Collections @relation(fields: [collectionid], references: [collectionid])
}
